{
  "name": "myairtable",
  "version": "0.4.2",
  "scripts": {
    "start": "npm run dev:client",
    "dev:client": "webpack-dev-server --config client/cfg/webpack.dev.js",
    "dev:server": "webpack-dev-server --config client/cfg/webpack.dev.js",
    "lint": "eslint --ext .js,.vue client/src server/src",
    "commit": "git add -A && git commit",
    "push": "git push && git push --tags",
    "bump:patch": "npm run lint && npm run commit && npm version patch && npm run push",
    "bump:minor": "npm run lint && npm run commit && npm version minor && npm run push",
    "bump:major": "npm run lint && npm run commit && npm version major && npm run push",
    "build": "rimraf dist/* && webpack --config cfg/webpack.prod.js",
    "deploy": "npm run build && firebase deploy",
    "release:patch": "npm run bump:patch && npm run deploy",
    "release:minor": "npm run bump:minor && npm run deploy",
    "release:major": "npm run bump:major && npm run deploy"
  },
  "dependencies": {
    "@joaomelo/bus": "^1.1.4",
    "@joaomelo/fireauth-machine": "^2.1.1",
    "@joaomelo/hot-collection": "^0.5.1",
    "airtable": "^0.7.2",
    "bottleneck": "^2.19.5",
    "core-js": "^2.6.11",
    "firebase": "^6.6.2",
    "moment": "^2.24.0",
    "regenerator-runtime": "^0.13.5",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "vuetify": "^2.2.19"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "circular-dependency-plugin": "^5.2.0",
    "compression-webpack-plugin": "^3.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "deepmerge": "^4.2.2",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.0.0",
    "eslint-plugin-vue-libs": "^4.0.0",
    "fibers": "^4.0.2",
    "html-webpack-plugin": "^3.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "vue-loader": "^15.9.1",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.4.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  }
}
